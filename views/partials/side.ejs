<aside
  class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3   bg-gradient-dark"
  id="sidenav-main">
  <div class="sidenav-header">
    <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none"
      aria-hidden="true" id="iconSidenav"></i>
    <a class="navbar-brand m-0" href="/" target="_blank">
      <img src="/static/img/logo-ct.png" class="navbar-brand-img h-100" alt="main_logo">
      <span class="ms-1 font-weight-bold text-white">
        <%= application.app_title %>
      </span>
    </a>
  </div>
  <hr class="horizontal light mt-0 mb-2">
  <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
    <ul class="navbar-nav">
      <% application.pages.forEach(page=> { %>
        <% if (page.fixed==false) { %>
          <li class="nav-item">

            <% if (url==page.href) { %>
              <a class="nav-link text-white active bg-gradient-primary" href="<%= page.href %>">
                <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                  <i class="material-icons opacity-10">
                    <%= page.icon %>
                  </i>
                </div>
                <span class="nav-link-text ms-1">
                  <%= page.name %>
                </span>
              </a>
              <%} else { %>
                <a class="nav-link text-white " href="<%= page.href %>">
                  <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                    <i class="material-icons opacity-10">
                      <%= page.icon %>
                    </i>
                  </div>
                  <span class="nav-link-text ms-1">
                    <%= page.name %>
                  </span>
                </a>
                <% } %>
          </li>
          <% } %>
            <% }) %>
    </ul>
  </div>
  <hr class="horizontal light mt-0  ">
  <div class="sidenav-footer position-absolute w-100 bottom-0 ">
    <div class="mx-3">
      <% application.pages.forEach(page=> { %>
        <% if (page.fixed==true) { %>
          <% if (url==page.href) { %>
            <a class="btn mt-4 w-100 bg-gradient-primary" href="<%= page.href %>" type="button">
              <i class="material-icons opacity-10 me-3">
                <%= page.icon %>
              </i>
              <%= page.name %>
            </a>
            <%} else { %>
              <a class="btn mt-4 w-100" href="<%= page.href %>" type="button">
                <i class="material-icons opacity-10 me-3">
                  <%= page.icon %>
                </i>
                <%= page.name %>
              </a>
              <% } %>
                <% } %>
                  <% }) %>
    </div>
  </div>
</aside>